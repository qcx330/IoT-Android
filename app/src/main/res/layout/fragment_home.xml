<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="@color/black"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_temperature" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/valueTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="-80dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textFontWeight="900"
                    android:textSize="50dp"
                    android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:text="째C"
                        android:textColor="@color/white"
                        android:textFontWeight="900"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="-80dp"
                            android:text="Max: "
                            android:textColor="@color/white"
                            android:textFontWeight="900"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/valueMaxTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="-80dp"
                            android:text="57"
                            android:textColor="@color/white"
                            android:textFontWeight="900"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:text="째C"
                            android:textColor="@color/white"
                            android:textFontWeight="900"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="-80dp"
                                android:text="Min: "
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="25dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/valueMinTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="-80dp"
                                android:text="57"
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="25dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:text="째C"
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="17dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="-80dp"
                                android:text="Feel like: "
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="25dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/valueFeelLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="85dp"
                                android:layout_marginRight="-80dp"
                                android:text="57"
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="25dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:text="째C"
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="17dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <com.google.android.material.slider.Slider
                    android:id="@+id/TemperatureSlider"
                    app:labelBehavior="gone"
                    app:thumbColor="@color/finish"
                    app:trackColorActive="@color/finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="50"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="Temperature"
                    android:textColor="@color/white"
                    android:textFontWeight="900"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="@color/black"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_airwave" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="-80dp"
                                android:text="Speed: "
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="35dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/valueWindSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="-80dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="35dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="85dp"
                                android:text="m/s"
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="-80dp"
                                android:text="Degrees: "
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="35dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/valueWindDegrees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="-80dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="35dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:text="째"
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="40dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="-80dp"
                                android:text="Gust: "
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="35dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/valueWindGust"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="85dp"
                                android:layout_marginRight="-80dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="35dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="80dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textFontWeight="900"
                                android:textSize="17dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="Wind"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textFontWeight="900"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_humidity" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/valueHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="-80dp"
                        android:layout_marginTop="-15dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textFontWeight="900"
                        android:textSize="40dp"
                        android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="-20dp"
                            android:text="%"
                            android:textColor="@color/white"
                            android:textFontWeight="900"
                            android:textSize="30dp"
                            android:textStyle="bold" />
                </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/HumiditySlider"
                        app:labelBehavior="gone"
                        app:thumbColor="@color/finish"
                        app:trackColorActive="@color/finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="100" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Humidity"
                        android:textColor="@color/white"
                        android:textFontWeight="900"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_tire_repair" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/valuePressure"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="-80dp"
                            android:layout_marginTop="-10dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textFontWeight="900"
                            android:textSize="35dp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="-10dp"
                            android:text="hpa"
                            android:textColor="@color/white"
                            android:textFontWeight="900"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/PressureSlider"
                        app:labelBehavior="gone"
                        app:thumbColor="@color/finish"
                        app:trackColorActive="@color/finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="500"
                        android:valueTo="2000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Pressure"
                        android:textColor="@color/white"
                        android:textFontWeight="900"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="200dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_sealevel"
                        app:tint="@color/white"
                        android:layout_marginLeft="5dp" />

                        <TextView
                            android:id="@+id/valueSeaLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="-80dp"
                            android:layout_marginTop="-15dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textFontWeight="900"
                            android:textSize="40dp"
                            android:textStyle="bold" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/SeaLevelSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="500"
                        android:valueTo="2000"
                        app:labelBehavior="gone"
                        app:thumbColor="@color/finish"
                        app:trackColorActive="@color/finish" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Sea Level"
                        android:textColor="@color/white"
                        android:textFontWeight="900"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_grass" />

                        <TextView
                            android:id="@+id/valueGroundLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginRight="-80dp"
                            android:layout_marginTop="-15dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textFontWeight="900"
                            android:textSize="40dp"
                            android:textStyle="bold" />


                    <com.google.android.material.slider.Slider
                        android:id="@+id/GroundLevelSlider"
                        app:labelBehavior="gone"
                        app:thumbColor="@color/finish"
                        app:trackColorActive="@color/finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="500"
                        android:valueTo="2000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="Ground Level"
                        android:textColor="@color/white"
                        android:textFontWeight="900"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>